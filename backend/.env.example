# Application configuration
APP_NAME=OpenGuardrails
APP_VERSION=4.2.1
DEBUG=false

# Super admin configuration
# Warning: Please modify the default admin username and password!
SUPER_ADMIN_USERNAME=admin@yourdomain.com
SUPER_ADMIN_PASSWORD=CHANGE-THIS-PASSWORD-IN-PRODUCTION

# Data directory configuration
DATA_DIR=/mnt/data/openguardrails-data

# Database configuration
DATABASE_URL=postgresql://openguardrails:your_password@localhost:54321/openguardrails

# Model configuration
# Set model API address (local or cloud)
GUARDRAILS_MODEL_API_URL=http://your-host-ip:your-port/v1
GUARDRAILS_MODEL_API_KEY=your-guardrails-model-api-key
GUARDRAILS_MODEL_NAME=OpenGuardrails-Text

# Multimodal model configuration
GUARDRAILS_VL_MODEL_API_URL=http://localhost:58003/v1
GUARDRAILS_VL_MODEL_API_KEY=your-vl-model-api-key
GUARDRAILS_VL_MODEL_NAME=OpenGuardrails-VL

# Detection maximum context length configuration (should be equal to model max-model-len - 1000)
MAX_DETECTION_CONTEXT_LENGTH=7168

# Embedding model API configuration
# Used for knowledge base vectorization
EMBEDDING_API_BASE_URL=http://your-host-ip:your-port/v1
EMBEDDING_API_KEY=your-embedding-api-key
EMBEDDING_MODEL_NAME=OpenGuardrails-Embedding-1024
EMBEDDING_MODEL_DIMENSION=1024
EMBEDDING_MAX_RESULTS=5

# API configuration
CORS_ORIGINS=*

# Log configuration
LOG_LEVEL=INFO

# Contact information
SUPPORT_EMAIL=thomas@openguardrails.com

# HuggingFace model
HUGGINGFACE_MODEL=openguardrails/OpenGuardrails-Text


# JWT configuration
# Warning: Please generate a secure random key! Use: openssl rand -base64 64
JWT_SECRET_KEY=PLEASE-GENERATE-A-SECURE-RANDOM-KEY-USING-openssl-rand-base64-64
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Email configuration
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-email-password
SMTP_USE_TLS=true
SMTP_USE_SSL=false

# Server configuration - dual service architecture
# Detection service configuration (high concurrency)
DETECTION_PORT=5001
DETECTION_UVICORN_WORKERS=32
DETECTION_MAX_CONCURRENT_REQUESTS=400

# Management service configuration (low concurrency)
ADMIN_PORT=5000
ADMIN_UVICORN_WORKERS=2
ADMIN_MAX_CONCURRENT_REQUESTS=50

# Proxy service configuration (high concurrency)
PROXY_PORT=5002
PROXY_UVICORN_WORKERS=24
PROXY_MAX_CONCURRENT_REQUESTS=300

# Private deployment configuration: whether to store detection results in the database
# true: store to database (SaaS mode, complete data analysis)
# false: only write log file (private mode, reduce database pressure)
STORE_DETECTION_RESULTS=true

# Default tenant limits
# Default monthly scan limit for new tenants (detections per month)
DEFAULT_MONTHLY_SCAN_LIMIT=10000

# Default rate limit for new tenants (requests per second)
DEFAULT_RATE_LIMIT_RPS=10