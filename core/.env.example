# Server
PORT=3002
NODE_ENV=development

# Database (SQLite default, set DATABASE_URL for PG/MySQL)
# DATABASE_URL=postgresql://user:pass@localhost:5432/openguardrails
CORE_DB_PATH=./data/openguardrails.db

# Internal auth key — used by dashboard to call core without an agent API key
OG_INTERNAL_KEY=change-me-internal-key

# Platform base URL — used in claim URLs and email links
PLATFORM_URL=https://platform.openguardrails.com

# Email (SMTP) — leave blank to log emails to console in dev
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=thomas@openguardrails.com
